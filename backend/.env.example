# Environment Configuration
# Copy this file to .env and update values for local development

# Django Settings
DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-change-in-production

# Database (Leave empty to use SQLite for local development)
# DATABASE_URL=postgres://user:password@host:5432/dbname

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===== LLM Configuration =====
# Choose provider: 'openai' or 'huggingface'
LLM_PROVIDER=huggingface

# OpenAI (if using openai provider)
OPENAI_API_KEY=

# Hugging Face (if using huggingface provider)
HUGGINGFACE_API_KEY=

# ===== Social Authentication (OIDC) =====
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
